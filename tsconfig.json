{
  "compilerOptions": {
    "module": "commonjs", //CommonJS 모듈 시스템을 사용합니다. 이는 Node.js 환경과 호환성이 좋습니다.
    "declaration": true, //.d.ts 형식의 선언 파일을 생성합니다. 이는 TypeScript 코드를 외부에서 사용하는 경우에 유용합니다.
    "removeComments": true, //컴파일된 JavaScript 코드에서 주석을 제거합니다.
    "emitDecoratorMetadata": true, //데코레이터에 대한 메타데이터를 생성합니다. Angular와 같은 프레임워크에서 사용됩니다.
    "experimentalDecorators": true, //실험적인 데코레이터를 활성화합니다. 데코레이터를 사용하기 위해 필요한 설정입니다.
    "allowSyntheticDefaultImports": true, // ES6 스타일의 default imports를 허용합니다.
    "target": "es2017", // ECMAScript 2017를 대상으로 하는 JavaScript 코드를 생성합니다.
    "sourceMap": true, // 소스 맵 파일을 생성하여 디버깅을 도웁니다.
    "outDir": "./dist", // 컴파일된 JavaScript 파일을 저장할 디렉토리를 지정합니다.
    "baseUrl": "./", // 상대 경로에서 모듈을 해결할 때의 기본 경로를 설정합니다.
    "incremental": true, // 점진적 컴파일을 활성화하여 컴파일 시간을 단축합니다.
    "skipLibCheck": true, // 라이브러리 검사를 건너뛰어 성능을 향상시킵니다.
    "strictNullChecks": false, // strict null checks를 비활성화합니다.
    "noImplicitAny": false, // implicit any를 허용합니다.
    "strictBindCallApply": false, // strict bind, call, apply를 비활성화합니다.
    "forceConsistentCasingInFileNames": false, // 파일 이름의 일관된 대소문자 강제를 비활성화합니다.
    "noFallthroughCasesInSwitch": false // switch 문에서 fallthrough를 허용합니다.
  }
}
